{
    "tasks": {
        "dev": "deno run --allow-net --allow-write --watch app.ts",
        "start": "deno run --allow-net --allow-write app.ts"
    },
    "compilerOptions": {
        "strict": true,
        "lib": [
            "deno.window"
        ]
    },
    "fmt": {
        "semiColons": true,
        "singleQuote": false
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ]
        }
    }
}
